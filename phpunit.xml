<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        bootstrap="tests/PhpUnits/bootstrap.php"
        colors="true"
        cacheResult="false"
        verbose="true">

    <testsuites>
        <testsuite name="all">
            <directory>tests/PhpUnits</directory>
        </testsuite>
        <testsuite name="microservices">
            <directory>tests/PhpUnits/Microservices</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>

    <php>
        <const name="PHPUNIT_TEST_SUITE" value="1"/>
    </php>
</phpunit>
